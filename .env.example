# N8N Configuration
N8N_HOST=your-app-name.up.railway.app
N8N_PROTOCOL=https
WEBHOOK_URL=https://your-app-name.up.railway.app/
GENERIC_TIMEZONE=America/New_York

# Database Configuration (Railway will provide these)
DB_POSTGRESDB_HOST=${{Postgres.PGHOST}}
DB_POSTGRESDB_PORT=${{Postgres.PGPORT}}
DB_POSTGRESDB_DATABASE=${{Postgres.PGDATABASE}}
DB_POSTGRESDB_USER=${{Postgres.PGUSER}}
DB_POSTGRESDB_PASSWORD=${{Postgres.PGPASSWORD}}

# Security - Generate a random string for encryption key
# You can generate one with: openssl rand -base64 32
N8N_ENCRYPTION_KEY=your-random-encryption-key-here

# Basic Auth (optional but recommended for initial setup)
N8N_BASIC_AUTH_ACTIVE=true
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=your-secure-password
